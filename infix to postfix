#include <stdio.h>
#include<string.h>
int top=0 ;
char stack[100] ;
int prec(char c)
{
    int  p ;
    if(c=='(')
    {
        p=0 ;
    }
    if(c=='^')
    {
        p=3 ;
    }
    if(c=='*'||c=='/')
    {
        p=2 ;
    }
    if(c=='+'||c=='-')
    {
        p=1 ;
    }
    return p ;
}
void push(char c)
{
    if(top>=100)
    {
        printf("stack overflow\n") ;
        return ;
    }
    stack[top]=c ;
    top++ ;
}
char pop()
{
    if(top<0)
    {
        printf("stack underflow\n");
        top-- ;
        return ;
    }
    top-- ;
    char a=stack[top] ;

    return a ;
}
int main ()
{
    printf("enter the infix expression\n") ;
    char infix[100] ;
    gets(infix) ;
    int l=strlen(infix) ;
    for(int x=0;x<l;x++)
    {
        if(infix[x]=='(')
        {
            push(infix[x]) ;
        }
        else if(infix[x]=='+'||infix[x]=='-'||infix[x]=='^'||infix[x]=='*'||infix[x]=='/')
        {
            int pi=prec(infix[x]) ;
            int pt=prec(stack[top-1]) ;
            while(pi<pt)
            {
                char j=pop() ;
                printf("%c",j) ;
                pt=prec(stack[top]) ;
            }
            push(infix[x]) ;

        }
        else if(infix[x]==')')
        {
            char g=pop() ;
            while(g!='(')
            {
                printf("%c",g) ;
                g=pop() ;
            }
        }
        else
        {
            printf("%c",infix[x]) ;
        }
    }

}

