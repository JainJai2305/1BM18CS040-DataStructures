#include <stdio.h>
void push (int i,int*p,int*top)
{
    if(*top>=100)
    {
        printf("stack overflow\n");
        return ;
    }
    *p=i ;
    ++*top ;
}
int pop(int*p,int *top)
{
    if(*top--<0)
    {
        printf("stack underflow\n") ;
        return -9999 ;
    }

    return *p ;
}
void display(int *p,int *top)
{

    if(*top<0)
    {
        printf("0; stack is empty\n") ;
    }
    int x ;
    for(x=*top;x>=0;x--)
    {
        printf("%d\n",*(p+x)) ;
    }
}
int main()
{
    int a[100] ,top=0,n,f ;
    char c ;
    printf("If you want to push an element press 'y'\n") ;
    scanf("%c",&c) ;
    while(c=='y')
    {

        printf("enter the number you want to push\n") ;
        scanf("%d",&n) ;
        push(n,&a[top],&top) ;

        printf("for pushing again press 'y'\n") ;
        fflush(stdin) ;
        scanf("%c",&c) ;
    }
    
    printf("If you want to pop an element press 'y'\n") ;
    fflush(stdin) ;
    scanf("%c",&c) ;
    while(c=='y')
    {
        top-- ;
        f=pop(&a[top],&top) ;
        printf("the popped element is %d\n",f) ;
        printf("for poping again press 'y'\n") ;
        fflush(stdin) ;
        scanf("%c",&c) ;
    }
    printf("the elements in the stack are\n") ;
    top-- ;
    display(&a[0],&top) ;
}
