# include<stdio.h>
# include <string.h>
#define size 10
void insert (int item,int*r,int*f,int*p)
{
	if(*f==*r+1||(*f==0&&*r==size-1))
	{ 
	  printf("queue is full\n") ;
	  return ;
	}
	if(*f==-1)
	{ 
	  *f=0 ;
	}
	
	*(p+*r)=item ;
	*r=(*r+1)%size ;
}
int delete(int*p,int*f,int*r)
{
	int item ;
	if(*f==0)
	{
	  printf("queue is empty\n") ;
	  return -999 ;
	}
	item=*(p+*f) ;
	*f=(*f+1)%size ;
	
	return item ;
}
void display(int f,int r,int*p)
{
	int i ;
	for(i= f;i<r;i++)
	{
		printf("%d\n",*(p+i)) ;
	}
}
int main()
{
	int n ;
	int rear=0 ;
	int front=0 ;
	int cq[10] ;
	
	char c ;
	printf("press y for inserting element in queue\n") ;
	scanf("%c",&c) ;
	while(c=='y')
	{
		printf("enter the element you want to insert\n") ;
		scanf("%d",&n) ; 
		insert (n,&rear,&front,&cq[0]) ;
		printf("press y for inserting element in queue\n") ;
		fflush(stdin) ;
		scanf("%c",&c) ;
	}
	printf("press y for deleting element from queue\n") ;
	fflush(stdin) ;
	scanf("%c",&c) ;
	while(c=='y')
	{
		delete(&cq[0],&front,&rear) ;
		printf("press y for inserting element in queue\n") ;
		fflush(stdin) ;
		scanf("%c",&c) ;
	}
	display(front, rear,&cq[0]) ;
}
